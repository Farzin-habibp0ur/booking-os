{
  "name": "booking-os",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@11.8.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npx turbo dev",
    "build": "npx turbo build",
    "lint": "npx turbo lint",
    "db:generate": "npm run generate --workspace=@booking-os/db",
    "db:migrate": "npm run migrate --workspace=@booking-os/db",
    "db:seed": "npm run seed --workspace=@booking-os/db",
    "db:studio": "npm run studio --workspace=@booking-os/db",
    "format": "prettier --write \"apps/**/*.{ts,tsx}\" \"packages/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"apps/**/*.{ts,tsx}\" \"packages/**/*.{ts,tsx}\"",
    "test": "npx turbo test",
    "test:coverage": "npx turbo test:coverage",
    "test:e2e": "npx playwright test --config apps/web/playwright.config.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/multer": "^2.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "turbo": "^2.8.10",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.0"
  }
}
