# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/booking_os?schema=public"

# JWT — IMPORTANT: Change JWT_SECRET to a strong random value in production
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="change-me-in-production"
JWT_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# Webhook — Set to enable HMAC signature verification on inbound webhooks
# WEBHOOK_SECRET=""

# API
API_PORT=3001
API_URL="http://localhost:3001"

# Web
NEXT_PUBLIC_API_URL="http://localhost:3001/api/v1"
NEXT_PUBLIC_WS_URL="http://localhost:3001"

# Simulator
SIMULATOR_PORT=3002

# Environment
NODE_ENV="development"
