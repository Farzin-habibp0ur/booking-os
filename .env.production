# Booking OS — Production Environment
# Copy this file to .env and fill in all "CHANGE ME" values before deploying.

# Environment
NODE_ENV=production

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_strong_db_password
POSTGRES_DB=booking_os
DATABASE_URL="postgresql://postgres:CHANGE_ME_strong_db_password@postgres:5432/booking_os?schema=public"

# Redis (provided by docker-compose, no change needed)
REDIS_URL="redis://redis:6379"

# JWT — CHANGE ME: generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_ME_jwt_secret
JWT_REFRESH_SECRET=CHANGE_ME_jwt_refresh_secret
JWT_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# Webhook — CHANGE ME
WEBHOOK_SECRET=CHANGE_ME_webhook_secret

# CORS — set to your production domain
CORS_ORIGINS="https://businesscommandcentre.com"

# API
API_PORT=3001
API_URL="https://businesscommandcentre.com"

# Web
NEXT_PUBLIC_API_URL="https://businesscommandcentre.com/api/v1"
NEXT_PUBLIC_WS_URL="https://businesscommandcentre.com"

# SSL certificate directory (mounted into Nginx)
SSL_CERT_DIR=./nginx/ssl

# AI — CHANGE ME
# ANTHROPIC_API_KEY=

# WhatsApp Cloud API — CHANGE ME
# WHATSAPP_PHONE_NUMBER_ID=
# WHATSAPP_ACCESS_TOKEN=
# WHATSAPP_VERIFY_TOKEN=
MESSAGING_PROVIDER=mock

